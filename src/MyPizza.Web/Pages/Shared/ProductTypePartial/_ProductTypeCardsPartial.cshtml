@model List<ProductTypeViewModel>

@foreach (var item in Model)
{
    <div class="col-md-3">
        <div class="card h-100 mb-10 border-2 rounded-3" style="margin: 5px; width: 300px">
            <div class="card-body">
                <a class="text-decoration-none" asp-page="Index">
                    <img src="@item.PictureUrl" class="card-img-top" alt="photo">
                    <h6 class="card-title">@item.Name</h6>
                    <p class="card-text">@item.Description</p>
                </a>
            </div>
            <div class="card-footer d-flex justify-content-around">
                <div class="card-text">
                    <p>&#36;@item.Price</p>
                </div>
                <div>
                    <p>@item.Weight @item.Measure</p>
                </div>
                <div>
                    <a asp-page="Index" class="btn btn-primary btn-sm">
                        <i class="bi"></i>
                        ADD TO CART
                    </a>
                </div>
            </div>
        </div>
    </div>
}